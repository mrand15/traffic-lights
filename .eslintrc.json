{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "blockBindings": true,
      "forOf": true,
      "jsx": true
    }
  },
  "globals": {
    "document": true,
    "window": true,
    "$": true,
    "Handlebars": true
  },
  "env": {
    "node": true,
    "browser": true,
    "mocha": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "semi": [2, "always"],
    "new-parens": [0],
    "no-shadow": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "quotes": [2, "single"],
    "indent": ["error", 2, { "VariableDeclarator": {"var": 2, "let": 2, "const": 3}, "SwitchCase": 1}],
    "no-console": [2, { "allow": ["warn", "error"] }],
    "valid-jsdoc": [2, {
      "requireReturn": false,
      "requireReturnDescription": false,
      "requireParamDescription": false
    }],
    "keyword-spacing": "error",
    "space-before-blocks": "error",
    "comma-dangle": ["error", {
      "objects": "always-multiline"
    }]
  }
}
